<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dpi_10"
    android:layout_marginBottom="@dimen/dpi_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutPlayer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPlayerProfile"
                android:layout_marginLeft="@dimen/dpi_5"
                android:layout_width="@dimen/dpi_50"
                android:layout_height="@dimen/dpi_50"
                app:civ_border_color="@color/gray"
                android:src="@drawable/baseball_img"/>
            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_marginLeft="@dimen/dpi_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/fontsfree_net_sf_pro_rounded_bold"
                android:textSize="@dimen/dpi_13"
                android:layout_gravity="center"
                android:text="Billy Deniles"/>
            <TextView
                android:id="@+id/tvTimePlayer"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:textSize="10sp"
                android:fontFamily="@font/fontsfree_net_sf_pro_rounded_regular"
                android:text="3:00 PM"
                android:textColor="@color/text_color_dark"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-12dp"
            android:layout_marginLeft="@dimen/dpi_60"
            android:layout_marginRight="10sp"
            android:background="@drawable/chat_primary"
            android:padding="10sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imgLayoutPlayer"
                android:layout_width="match_parent"
                android:layout_height="200sp">

                <ImageView
                    android:id="@+id/imgThumbPlayer"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseball_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:src="@drawable/play_white"
                    android:layout_centerInParent="true"
                    android:layout_width="35sp"
                    android:layout_height="35sp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMsgPlayer"
                android:fontFamily="@font/fontsfree_net_sf_pro_rounded_regular"
                android:layout_marginBottom="5sp"
                android:textColor="@color/white"
                android:text="I want to be able to see text underneath each image that looks like mockup on the right."
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCoach"
        android:layout_marginTop="@dimen/dpi_20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCoachProfile"
                android:layout_marginLeft="@dimen/dpi_5"
                android:layout_width="@dimen/dpi_50"
                android:layout_height="@dimen/dpi_50"
                app:civ_border_color="@color/gray"
                android:src="@drawable/baseball_img"/>
            <TextView
                android:id="@+id/tvCoachName"
                android:layout_marginLeft="@dimen/dpi_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/fontsfree_net_sf_pro_rounded_bold"
                android:textSize="@dimen/dpi_13"
                android:layout_gravity="center"
                android:text="Billy Deniles"/>
            <TextView
                android:id="@+id/tvCoachTime"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:textSize="10sp"
                android:fontFamily="@font/fontsfree_net_sf_pro_rounded_regular"
                android:text="3:00 PM"
                android:textColor="@color/text_color_dark"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-12dp"
            android:layout_marginLeft="@dimen/dpi_60"
            android:layout_marginRight="10sp"
            android:background="@drawable/chat_gray"
            android:padding="10sp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imgLayoutCoach"
                android:layout_width="match_parent"
                android:layout_height="200sp">

                <ImageView
                    android:id="@+id/imgThumbCoach"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseball_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:src="@drawable/play_white"
                    android:layout_centerInParent="true"
                    android:layout_width="35sp"
                    android:layout_height="35sp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMsgCoach"
                android:fontFamily="@font/fontsfree_net_sf_pro_rounded_regular"
                android:layout_marginBottom="5sp"
                android:textColor="@color/text_color_dark"
                android:text="I want to be able to see text underneath each image that looks like mockup on the right."
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>