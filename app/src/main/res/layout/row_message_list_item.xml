<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:padding="5sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpi_70"
        android:layout_marginLeft="@dimen/dpi_5"
        android:layout_marginTop="@dimen/dpi_10"
        android:layout_marginRight="@dimen/dpi_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/playerImg"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent"
                android:src="@drawable/avatar" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dpi_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coachName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fontsfree_net_sf_pro_rounded_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/spi_18" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textOne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/spi_16"
                    android:fontFamily="@font/fontsfree_net_sf_pro_rounded_regular" />


                <TextView
                    android:id="@+id/textTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/spi_16"
                    android:fontFamily="@font/fontsfree_net_sf_pro_rounded_regular"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:id="@+id/rlLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_trophy"
                android:layout_width="@dimen/dpi_30"
                android:layout_height="@dimen/dpi_30"
                android:layout_centerInParent="true"
                android:gravity="center" />

            <!-- android:src="@drawable/gold_trophy" -->
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/dpi_5"
        android:layout_marginTop="@dimen/dpi_20"
        android:layout_marginRight="@dimen/dpi_5"
        android:layout_marginBottom="@dimen/dpi_7"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:background="@drawable/curve_view_details"
            android:gravity="center"
            android:text="Message"
            android:textColor="@color/white"
            android:fontFamily="@font/fontsfree_net_sf_pro_rounded_bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpi_1"
        android:layout_marginLeft="@dimen/dpi_5"
        android:layout_marginRight="@dimen/dpi_5"
        android:background="@color/gray" />

</LinearLayout>
